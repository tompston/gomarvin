package convert


import (
	"fmt"
	"strconv"
)

func StringToInt(input string) (int, error) {
	i, err := strconv.Atoi(input)
	if err != nil {
		return 0, fmt.Errorf("could not convert %s to int: %v", input, err)
	}
	return i, nil
}

func StringToBool(input string) (bool, error) {
	b, err := strconv.ParseBool(input)
	if err != nil {
		return false, fmt.Errorf("could not convert %s to bool: %v", input, err)
	}
	return b, nil
}
